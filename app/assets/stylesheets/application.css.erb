body {
	font-family: 'Open Sans', sans-serif;
	color: #424242;
}

textarea, input {
	background-color: transparent;
	border: 0;
	padding: 0;
	flex: auto;
	transition: all 0.15s ease-out;
	border-radius: 0.43em;
	color: #424242;
}

textarea::placeholder, input::placeholder {
	color: #BDBDBD;
	font-family: 'Material Icons';
}

textarea {
	resize: none;
}

input:focus, select:focus, textarea:focus, button:focus {
	outline: none;
}

a {
	text-decoration: none;
	color: #424242;
}

.material-icons {
	font-size: 1.5em;
}

.container {
	width: 100vw;
	height: 100vh;
}

.deviseButton {
	padding: 0.43em;
	border-radius: 3px;
	background-color: #FAFAFA;
	opacity: 0.5;
	margin: 0 1.72rem;
	box-shadow: 4px 4px 4px rgba(0,0,0,0.20), -1px -1px 0 rgba(255,255,255,0.20);
	transition: all 0.15s ease-out;
}

.deviseButton:hover {
	opacity: 0.9;
}

.deviseButton:active {
	position: relative;
	top: 4px;
	left: 4px;
	box-shadow: 1px 1px 1px rgba(0,0,0,0.20), -1px -1px 0 rgba(255,255,255,0.20);
}

.WorkList {
	display: flex;
	flex-direction: column;
	overflow: auto;
}

.WorkContainer {
	background-color: #FAFAFA;
}

.MobileMenu {
	font-size: 1.5rem;
	background-color: #009688;
	box-shadow: 0 4px 4px rgba(0, 0, 0, 0.20);
	padding: 0.43em;
	z-index: 10;
}

.MobileMenu input {
	border-radius: 3px;
	color: #424242;
}

.MobileMenu input::placeholder {
	color: #E0E0E0;
}

.MobileMenu input:focus {
	background-color: #52c7b8;
	box-shadow: inset 0 1px 1px rgba(0,0,0,0.20);
}

.WorkListBody {
	overflow: auto;
	flex: auto;
}

.WorkContainer {
	margin: 0.29em;
	border-radius: 0.43em;
	padding: 0.43em;
	box-shadow: 1px 1px rgba(0,0,0,0.20);
}

.flex {
	display: flex;
}

.flexContent {
	flex: auto;
}

.bar {
	background-color: #EEEEEE;
	height: 2px;
	border-radius: 1px;
	margin: 0.29em;
}

.addButton {
	color: #009688;
	text-shadow: 0 4px 4px rgba(0,0,0,0.20);
	position: fixed;
	bottom: 0;
	right: 0;
	font-size: 4rem;
	z-index: 10;
}

.closeBar {
	text-align: center;
	line-height: 1;
	margin-right: -0.43em;
	margin-left: -0.43em;
	margin-bottom: -0.43em;
	border-bottom-right-radius: 0.43em;
	border-bottom-left-radius: 0.43em;
}

.deleteIcon {
	color: #DD2C00;
}

.checkProg {
	color: #BDBDBD;
	transition: all .15s ease-out;
	padding-right: 0.43rem;
}

.checkProg:hover {
	color: #009688;
}

.checkDone {
	color: #009688;
	transition: all .15s ease-out;
	padding-right : 0.43rem;
}

.checkDone:hover {
	color: #BDBDBD;
}

.closeBody, .openBody {
	color: #757575;
}

.MenuButton {
	color: #FAFAFA;
	border-radius: 3px;
	margin-left: 0.29em;
}

.MenuButton:active {
	box-shadow: inset 0 1px 3px rgba(0,0,0,0.20);
	background-color: #52c7b8;
}

.clearButton {
	color: #FAFAFA;
	border-radius: 3px;
	margin-left: 0.29em;
	transition: all 0.15s ease-out;
}

.clearButton:active {
	color: #c7c7c7;
}

.SearchButton {
	color: #FAFAFA;
	border-radius: 3px;
	margin-right: 0.29em;
}

.SearchButton:active {
	color: #c7c7c7;
}

.menuWrapper {
	backdrop-filter: blur(3px);
	-webkit-backdrop-filter: blur(3px);
}

.globalMenu {
	display: flex;
	flex-direction: column;
	font-size: 1.5rem;
}

.title {
	font-weight: bold;
}


.devise {
	width: 100vw;
	height: 100vh;
	background-color: rgba(0,0,0,0.30);
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	backdrop-filter: blur(3px);
	-webkit-backdrop-filter: blur(3px);
}

.message {
	padding: 1.72em;
	border-radius: 1.72em;
	background-color: #FAFAFA;
	opacity: 0.9;
	box-shadow: 4px 4px 4px rgba(0,0,0,0.20), -1px -1px 0 rgba(255,255,255,0.20);
	margin-top: -1.72em;
	margin-bottom: 1.72em;
}

.message::first-line {
	font-size: 2rem;
	font-weight: bold;
}

.message::first-letter {
	color: #009688;
}

.center {
	padding: 1.72em;
	border-radius: 1.72em;
	background-color: #FAFAFA;
	opacity: 0.9;
	box-shadow: 4px 4px 4px rgba(0,0,0,0.20), -1px -1px 0 rgba(255,255,255,0.20);
}

.devise h2 {
	-webkit-margin-before: 0;
}

.devise input {
	padding: 1px;
	border: 1px solid #424242;
	border-radius: 3px;
}

@media (max-width: 900px) {
	body {
		background: linear-gradient(to bottom right, #607D8B 10%, #EEEEEE 90%);
	}

	.container {
		display: flex;
		flex-direction: column;
	}

	.WorkList {
		flex: auto;
	}

	.menuWrapper {
		position: absolute;
		z-index: 20;
		display: none;
		width: 100vw;
		height: 100vh;
		align-items: center;
		justify-content: center;
		background-color: rgba(0,0,0,0.30);
		backdrop-filter: blur(3px);
		-webkit-backdrop-filter: blur(3px);
		transition: all 0.5s ease-out;
	}

	.showMobile {
		display: flex;
	}

	.globalMenu {
		width: 30vh;
		height: 30vh;
		border-radius: 1.72em;
		box-shadow: 4px 4px 4px rgba(0,0,0,0.20), -1px -1px 0 rgba(255,255,255,0.20);
		background-color: #FAFAFA;
	}

	.globalMenu .flexContent {
		display: none;
	}

	.globalMenu .flex {
		display: none;
	}

	.globalMenu div {
		flex: auto;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 1px rgba(0,0,0,0.20);
		transition: all 0.05s ease-out;
	}

	.globalMenu div:active {
		box-shadow: inset 0 6px 4px -2px rgba(0,0,0,0.20), inset 0 -6px 4px -2px rgba(0,0,0,0.20);
	}

	.globalMenu .title {
		background-color: #009688;
		border-radius: 1.72em 1.72em 0 0;
		color: #FAFAFA;
		text-shadow: 2px 2px 0 rgba(0,0,0,0.20);
	}

	.globalMenu .title:active {
		box-shadow: none;
	}

	.globalMenu div:last-child {
		border-radius: 0 0 1.72em 1.72em;
		box-shadow: none;
	}

	.globalMenu div:last-child:active {
		box-shadow: inset 0 6px 4px -2px rgba(0,0,0,0.20);
	}
}

@media (max-width: 900px) and (min-aspect-ratio: 1/1) {
	.globalMenu {
		width: 30vw;
		height: 30vw;
	}
}

@media (min-width: 901px) {
	body {
		background: url("<%= asset_path "ocean.jpeg" %>");
		background-size: cover;
	}

	textarea:hover, input:hover {
		background-color: rgba(187, 222, 251, 0.80);
	}

	.container {
		display: grid;
		grid-gap: 4px;
		grid-template-columns: 1fr 2.4fr;
	}

	.WorkList {
		grid-column: 2;
	}

	.WorkContainer {
		background-color: rgba(255,255,255,0.80);
		box-shadow: -1px 1px rgba(0,0,0,0.20), 1px -1px rgba(255,255,255,0.20);
	}

	.MobileMenu {
		display: none;
	}

	.closeBar, .openBar {
		transition: all 0.15s ease-out;
	}

	.closeBar:hover, .closeBar:active {
		background-color: rgba(255,255,255,0.30);
		box-shadow: 2px 2px 4px 2px rgba(0,0,0,0.20);
	}

	.openBar:hover, .openBar:active {
		background-color: rgba(255,255,255,0.90);
		box-shadow: 2px 2px 4px 2px rgba(0,0,0,0.20);
	}

	.addButton {
		display: none;
	}

	.deleteIcon {
		color: #BDBDBD;
		transition: all 0.15s ease-out;
	}

	.deleteIcon:hover {
		color: #DD2C00;
	}

	.menuWrapper {
		grid-column: 1;
		background-color: rgba(255,255,255,0.20);
		box-shadow: 1px 0 rgba(0,0,0,0.20);
		display: flex;
		flex-direction: column;
	}

	.globalMenu {
		flex: auto;
	}

	.globalMenu div {
		margin-top: 2px;
		margin-bottom: 2px;
	}

	.menuChangePass {
		font-size: 1rem;
	}

	.menuSignOut {
		font-size: 1rem;
	}

	.title, .menuNew, .menuChangePass, .menuSignOut {
		color: rgba(255, 255, 255, 0.85);
		padding: 0.43em;
		display: flex;
		box-shadow: -4px 4px #FDB813, 1px -1px rgba(0,0,0,0.20);
		position: relative;
		left: 4px;
		bottom: 4px;
		transition: all 0.05s ease-out;
		justify-content: flex-end;
		text-shadow: -4px 4px 1px #677077, 0 0 0 #000;
		margin-left: 0.43em;
	}

	.globalMenu .title {
		margin-top: 4px;
		margin-left: 0;
		font-size: 3rem;
		justify-content: center;
	}

	.globalMenu	.menuSignOut {
		margin-bottom: 0;
	}

	.menuNew:hover, .menuChangePass:hover, .menuSignOut:hover {
		color: #424242;
		position: static;
		background-color: rgba(253, 184, 19, 0.9);
		box-shadow:	-1px 1px 0 rgba(0,0,0,0.20);
		text-shadow: none;
	}

	.globalMenu input {
		color: rgba(255, 255, 255, 0.85);
		text-shadow: -4px 4px 1px #677077, 0 0 0 #000;
		border-radius: 0;
		box-shadow: -4px 4px rgba(253, 184, 19, 0.9), 1px -1px rgba(0,0,0,0.20);
		position: relative;
		left: 4px;
		bottom: 4px;
		transition: all 0.05s ease-out;
		margin-left: 0.43rem;
	}

	.globalMenu input:hover {
		background-color: rgba(253, 184, 19, 0.9);
		color: #424242;
		position: static;
		box-shadow: -1px 1px 0 rgba(0,0,0,0.20);
		text-shadow: none;
	}
}
